[include]
  path = ~/.gitconfig.local
[alias]
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore_global
[diff]
  colorMoved = zebra
[fetch]
  prune = true
[push]
  default = current
[pull]
  rebase = true
[credential]
  helper = osxkeychain
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
  process = git-lfs filter-process
[init]
  defaultBranch = main
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
