keybind = super+Digit3=text:\u{e002}
keybind = super+Digit4=text:\u{e003}
keybind = super+Digit5=text:\u{e004}
keybind = super+Digit6=text:\u{e005}
keybind = super+Digit7=text:\u{e006}
keybind = super+Digit8=text:\u{e007}

link-url = true
